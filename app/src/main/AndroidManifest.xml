            android:screenOrientation="landscape"
            tools:ignore="AppLinkUrlError">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.mini.infotainment.activities.misc.FakeLauncherActivity"
            android:enabled="false">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.HOME" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>


        <activity
            android:name=".activities.login.access.LoginActivity"
            android:label="@string/app_name"
            android:clearTaskOnLaunch="true"
            android:exported="true"
            android:windowSoftInputMode="stateAlwaysHidden"
            android:screenOrientation="landscape"
            android:noHistory="true"
            tools:ignore="AppLinkUrlError">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activities.login.register.RegisterActivity"
            android:label="@string/app_name"
            android:clearTaskOnLaunch="true"
            android:exported="true"
            android:windowSoftInputMode="stateAlwaysHidden"
            android:screenOrientation="landscape"
            android:noHistory="true"
            tools:ignore="AppLinkUrlError">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activities.login.edit.EditProfileActivity"
            android:label="@string/app_name"
            android:clearTaskOnLaunch="true"
            android:exported="true"
            android:windowSoftInputMode="stateAlwaysHidden"
            android:screenOrientation="landscape"
            android:noHistory="true"
            tools:ignore="AppLinkUrlError">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activities.checkout.CheckoutActivity"
            android:label="@string/app_name"
            android:clearTaskOnLaunch="true"
            android:exported="true"
            android:noHistory="true"
            android:windowSoftInputMode="stateAlwaysHidden"
            android:screenOrientation="portrait"
            tools:ignore="AppLinkUrlError">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activities.maps.MapsActivity"
            android:label="@string/app_name"
            android:clearTaskOnLaunch="true"
            android:noHistory="true"
            android:exported="true"
            android:windowSoftInputMode="stateAlwaysHidden"
            android:screenOrientation="landscape"
            tools:ignore="AppLinkUrlError">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="ca-app-pub-5725383971112097~1025409421"/>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="AIzaSyDr2npyyQLG63fy11NWYUoq8mp6NIHA0rQ" />

        <receiver android:name=".receivers.PackageReceiver" android:exported="true">
            <intent-filter android:priority="999">
                <action android:name="android.intent.action.PACKAGE_FULLY_REMOVED"/>
                <action android:name="android.intent.action.PACKAGE_CHANGED" />
                <data android:scheme="package"/>
            </intent-filter>
        </receiver>


    </application>



</manifest>