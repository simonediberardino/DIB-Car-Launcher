<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parent"
    android:layout_width="1024px"
    android:layout_height="600px"
    android:onClick="showApps">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/home_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black">

        <ImageView
            android:id="@+id/home_speedometer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:src="@drawable/speedometer"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/home_car_icon"
            android:layout_width="400px"
            android:layout_height="200px"
            android:src="@drawable/car_icon"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/home_placedegrees" />

        <TextView
            android:id="@+id/home_speed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed-medium"
            android:padding="1dp"
            android:shadowColor="@color/darkblue"
            android:shadowDx="0.0"
            android:shadowDy="0.0"
            android:shadowRadius="8"
            android:text="0"
            android:textColor="@color/white"
            android:textSize="50px"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/home_speedometer"
            app:layout_constraintEnd_toEndOf="@+id/home_speedometer"
            app:layout_constraintStart_toStartOf="@+id/home_speedometer"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.473" />

        <TextView
            android:id="@+id/home_speed_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed-medium"
            android:padding="1dp"
            android:shadowColor="@color/darkblue"
            android:shadowDx="0.0"
            android:shadowDy="0.0"
            android:shadowRadius="8"
            android:text="km/h"
            android:textColor="@color/white"
            android:textSize="18px"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/home_speed"
            app:layout_constraintStart_toStartOf="@+id/home_speed"
            app:layout_constraintTop_toBottomOf="@+id/home_speed" />

        <TextView
            android:id="@+id/home_datetime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/caricamento"
            android:textColor="@color/white"
            android:textSize="22px"
            app:layout_constraintEnd_toEndOf="@+id/home_speedometer"
            app:layout_constraintStart_toStartOf="@+id/home_speedometer"
            app:layout_constraintTop_toTopOf="@+id/home_speedometer" />

        <TextView
            android:id="@+id/home_placedegrees"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/caricamento"
            android:textColor="@color/white"
            android:textSize="22px"
            app:layout_constraintBottom_toBottomOf="@+id/home_speedometer"
            app:layout_constraintEnd_toEndOf="@+id/home_speedometer"
            app:layout_constraintStart_toStartOf="@+id/home_speedometer" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/containAppDrawer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/home_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0"
            android:background="@color/white" />

        <GridView
            android:id="@+id/grd_allApps"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:horizontalSpacing="1dp"
            android:numColumns="4"
            android:verticalSpacing="1dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>