<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parent"
    android:layout_width="1024px"
    android:layout_height="600px"
    android:background="@drawable/background">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/home_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/home_credits"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/credits"
            android:textSize="12px"
            app:layout_constraintBottom_toBottomOf="@+id/constraintLayout"
            app:layout_constraintEnd_toEndOf="parent" />

        <View
            android:id="@+id/home_view"
            android:layout_width="1dp"
            android:layout_height="0dp"
            android:alpha="0.25"
            android:background="@color/darkblue"
            app:layout_constraintEnd_toEndOf="@+id/scrollView2"
            app:layout_constraintStart_toStartOf="@+id/menu_title"
            app:layout_constraintTop_toBottomOf="@+id/menu_title" />

        <ScrollView
            android:id="@+id/scrollView2"
            android:layout_width="125px"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:id="@+id/home_sidemenu"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical">

                <View
                    android:id="@+id/home_view3"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:alpha="0.25"
                    android:background="@color/darkblue"
                    app:layout_constraintEnd_toEndOf="@+id/menu_title"
                    app:layout_constraintStart_toStartOf="@+id/menu_title"
                    app:layout_constraintTop_toBottomOf="@+id/menu_title" />
            </LinearLayout>
        </ScrollView>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/scrollView2"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/home_speedometer"
                android:layout_width="800px"
                android:layout_height="280px"
                android:layout_marginTop="32dp"
                android:src="@drawable/speedometer2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/home_swipe"
                android:layout_width="75px"
                android:layout_height="75px"
                android:layout_marginBottom="32dp"
                android:background="@drawable/home_button"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <include
                android:id="@+id/home_spotify"

                layout="@layout/spotify_widget"
                android:layout_width="200px"
                android:layout_height="200px"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@+id/home_speedometer"
                app:layout_constraintTop_toBottomOf="@+id/home_address"></include>

            <ImageView
                android:id="@+id/home_car_icon"
                android:layout_width="0dp"
                android:layout_height="200px"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                android:src="@drawable/car_icon"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/home_swipe"
                app:layout_constraintTop_toBottomOf="@+id/home_address" />

            <TextView
                android:id="@+id/home_speed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed-medium"
                android:padding="1dp"
                android:shadowColor="@color/darkblue"
                android:shadowDx="0.0"
                android:shadowDy="0.0"
                android:shadowRadius="8"
                android:text="0"
                android:textColor="@color/white"
                android:textSize="50px"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/home_speedometer"
                app:layout_constraintEnd_toEndOf="@+id/home_speedometer"
                app:layout_constraintStart_toStartOf="@+id/home_speedometer"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.473" />

            <TextView
                android:id="@+id/home_speed_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed-medium"
                android:padding="1dp"
                android:shadowColor="@color/darkblue"
                android:shadowDx="0.0"
                android:shadowDy="0.0"
                android:shadowRadius="8"
                android:text="km/h"
                android:textColor="@color/white"
                android:textSize="18px"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/home_speed"
                app:layout_constraintStart_toStartOf="@+id/home_speed"
                app:layout_constraintTop_toBottomOf="@+id/home_speed" />

            <TextView
                android:id="@+id/home_datetime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:shadowColor="@color/darkblue"
                android:shadowDx="0.0"
                android:shadowDy="0.0"
                android:shadowRadius="8"
                android:text="@string/caricamento"
                android:textColor="@color/white"
                android:textSize="22px"
                app:layout_constraintEnd_toEndOf="@+id/home_speedometer"
                app:layout_constraintStart_toStartOf="@+id/home_speedometer"
                app:layout_constraintTop_toTopOf="@+id/home_speedometer" />

            <TextView
                android:id="@+id/home_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:shadowColor="@color/darkblue"
                android:shadowDx="0.0"
                android:shadowDy="0.0"
                android:shadowRadius="8"
                android:text="@string/caricamento"
                android:textColor="@color/white"
                android:textSize="22px"
                app:layout_constraintBottom_toBottomOf="@+id/home_speedometer"
                app:layout_constraintEnd_toEndOf="@+id/home_speedometer"
                app:layout_constraintStart_toStartOf="@+id/home_speedometer" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/containAppDrawer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/home_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0"
            android:background="@color/black" />

        <GridView
            android:id="@+id/grd_allApps"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="32dp"
            android:layout_marginBottom="32dp"
            android:gravity="center"
            android:horizontalSpacing="10dp"
            android:numColumns="5"
            android:padding="5dp"
            android:scrollbars="none"
            android:stretchMode="columnWidth"
            android:verticalSpacing="10dp"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>