<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="25px"
        app:cardElevation="4px">

        <androidx.cardview.widget.CardView
            android:layout_width="250px"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            app:cardBackgroundColor="@color/darkgrey"
            app:cardCornerRadius="25px"
            app:cardElevation="4px">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16px">

                <ImageView
                    android:id="@+id/music_logo"
                    android:layout_width="18px"
                    android:layout_height="18px"
                    android:background="@drawable/ic_baseline_speaker_24"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/music_audio"
                    android:layout_width="18px"
                    android:layout_height="18px"
                    android:background="@drawable/ic_baseline_audiotrack_24"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/music_track"
                    android:layout_width="0px"
                    android:layout_height="90px"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="12px"
                    android:layout_marginEnd="8dp"
                    android:src="@drawable/speaker"
                    app:layout_constraintEnd_toStartOf="@+id/music_next"
                    app:layout_constraintStart_toEndOf="@+id/music_previous"
                    app:layout_constraintTop_toBottomOf="@+id/music_audio" />

                <ImageView
                    android:id="@+id/music_next"
                    android:layout_width="30px"
                    android:layout_height="30px"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/ic_baseline_skip_next_24" />

                <ImageView
                    android:id="@+id/music_previous"
                    android:layout_width="30px"
                    android:layout_height="30px"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/ic_baseline_skip_previous_24" />

                <TextView
                    android:id="@+id/music_title"
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8px"
                    android:layout_marginTop="12px"
                    android:layout_marginEnd="8px"
                    android:ellipsize="end"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="center"
                    android:lines="1"
                    android:maxLines="1"
                    android:text="@string/default_audio"
                    android:textColor="@color/blue"
                    android:textSize="@dimen/h8"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.75"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/music_track" />

                <TextView
                    android:id="@+id/music_author"
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8px"
                    android:layout_marginEnd="8px"
                    android:ellipsize="end"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="center"
                    android:lines="1"
                    android:maxLines="1"
                    android:text="@string/default_audio"
                    android:textColor="@color/darksilver"
                    android:textSize="@dimen/h9"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/music_title" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>