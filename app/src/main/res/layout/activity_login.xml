<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:padding="8dp">

    <HorizontalScrollView
        android:id="@+id/scrollView3"
        android:layout_width="750dp"
        android:layout_height="wrap_content"
        android:layout_margin="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:scrollbars="none"
        app:layout_constraintTop_toBottomOf="@+id/ll_input">

        <LinearLayout
            android:clickable="true"
            android:id="@+id/ll_logos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="32dp"
            android:paddingRight="32dp"
            android:paddingLeft="32dp"
            android:gravity="center"
            android:orientation="horizontal" />
    </HorizontalScrollView>

    <LinearLayout
        android:id="@+id/ll_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:orientation="vertical"
        android:focusable="true"
        android:focusableInTouchMode="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/login_targa"
            android:layout_width="600dp"
            android:layout_height="80dp"
            android:layout_marginTop="32dp"
            android:background="#11000000"
            android:drawableLeft="@drawable/ic_baseline_lock_24"
            android:drawablePadding="8dp"
            android:ems="10"
            android:hint="@string/targa"
            android:padding="8dp"
            android:password="false"
            android:textColor="@color/silver"
            android:textColorHint="@color/silver"
            android:textSize="@dimen/h4"
            android:focusedByDefault="false"
            />

        <EditText
            android:id="@+id/login_consumi"
            android:layout_width="600dp"
            android:layout_height="80dp"
            android:layout_marginTop="32dp"
            android:background="#11000000"
            android:drawableLeft="@drawable/ic_baseline_local_gas_station_24"
            android:drawablePadding="8dp"
            android:ems="10"
            android:hint="@string/consumi"
            android:inputType="numberDecimal"
            android:padding="8dp"
            android:password="false"
            android:textColor="@color/silver"
            android:textColorHint="@color/silver"
            android:textSize="@dimen/h4"
            />
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/login_login_button"
        android:layout_width="400dp"
        android:layout_height="65dp"
        app:cardCornerRadius="25dp"
        app:cardElevation="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scrollView3">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@drawable/pink_background"
            android:gravity="center">

            <TextView
                android:id="@+id/login_login_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@android:string/ok"
                android:textColor="@color/white"
                android:textSize="@dimen/h5" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>