<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="oval">
            <size
                android:width="40px"
                android:height="40px" />
            <padding
                android:bottom="15px"
                android:left="15px"
                android:right="15px"
                android:top="15px" />
            <stroke
                android:width="5px"
                android:color="@color/blue" />
        </shape>
    </item>

    <item>
        <shape android:shape="oval">
            <size
                android:width="40px"
                android:height="40px" />
            <solid android:color="@color/darkblue" />
        </shape>
    </item>
</layer-list>